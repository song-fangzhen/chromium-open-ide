{
    "manifest_version": 3,
    "name": "Chromium Open IDE",
    "description": "Link chromium with IDE",
    "version": "1.0",
    "permissions": [
        "contextMenus",
        "tabs",
        "scripting"
    ],
    "action": {
				"default_icon": "icon.png",
        "default_title": "COI"
    },
    "background": {
        "service_worker":  "background.js"
    },
    "host_permissions": [
        "http://127.0.0.1:8989/*",
        "https://source.chromium.org/*",
				"https://chromium-review.googlesource.com/*"
    ],
		"icons": {
    		"16": "icon.png",
    	 	"32": "icon.png",
    	 	"48": "icon.png",
   		 	"128": "icon.png"
 		 }
}

